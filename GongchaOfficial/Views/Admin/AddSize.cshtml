@model GongchaOfficial.Models.Size

@{
    ViewBag.Title = "AddSize";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddSize</h2>

@using (Html.BeginForm("AddSize", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Size</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })       

        <div class="form-group">
            @Html.Label("Size", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display:flex;">
                @foreach (var item in ViewBag.Size)
                {
                    <p>@item.SizeValue &ensp;</p>
                }
            </div>
        </div>
        
        @* Thêm giá trị mới *@
        <div class="form-group">
            @Html.Label("Value", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-1">               
                <input type="text" name="txtSizeValue" value="" class="form-control"/>
                @Html.ValidationMessageFor(model => model.SizeValue, "", new { @class = "text-danger" })
            </div>
            <input type="submit" value="Add" class="btn btn-default"/>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "DetailCategory")
</div>
