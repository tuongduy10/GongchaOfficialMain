@using GongchaOfficial.Models
@using PagedList.Mvc;
@model PagedList.PagedList<GongchaOfficial.Models.Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>QUẢN LÝ SẢN PHẨM</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Create")
</p>
<table class="table">
    <tr>
        <th style="width:200px">  Tên sản phẩm </th>
        <th style="width:100px">  Giá bán  </th>
        <th style="width:120px">  Ảnh  </th>
        <th style="width:150px">  Ngày cập nhật  </th>
        <th style="width:120px">  Tình trạng  </th>
        <th style="width:120px">  Danh mục  </th>
        <th style="width:100px">  Giới tính  </th>
        <th style="width:200px">  Bộ sưu tập  </th>
        <th style="width:200px">  </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @string.Format("{0:0,0}", item.ProductPrice)
            </td>
            <td>
                <img src="@Url.Content("~/Content/style/img/"+ item.ProductImage)" width="120px"/>
            </td>
            <td>
                @string.Format("{0:dd/MM/yyy}",item.ProductReleaseDate)
            </td>

            @if (item.ProductStatus == "open")
            {
                <td style="color:#00FF00">
                    @Html.DisplayFor(modelItem => item.ProductStatus)
                </td>
            }
            else if(item.ProductStatus == "close")
            {
                <td style="color:red">
                    @Html.DisplayFor(modelItem => item.ProductStatus)
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.ProductStatus)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex.Sex1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Collection.CollectionName)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductId })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
<div class="MenuTrang">

    @Html.PagedListPager(Model, page => Url.Action("Product", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
